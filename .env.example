# .env.example
# Copy this file to .env and fill in your values

# API Keys
SCHOLAR_API_KEY=your_google_scholar_api_key
IEEE_API_KEY=your_ieee_api_key
OPENAI_API_KEY=your_openai_api_key_if_needed

# Git Configuration
GIT_USER_NAME=Research Bot
GIT_USER_EMAIL=bot@research.local

# Ollama Model Configuration
OLLAMA_MODEL=mixtral:8x7b-instruct-v0.1-q4_K_M
# Alternative models:
# OLLAMA_MODEL=llama2:13b-chat-q4_K_M
# OLLAMA_MODEL=codellama:13b-instruct-q4_K_M

# Service Ports (change if conflicts)
MCP_PORT=3000
CRAWLER_PORT=5000
CODE_DEV_PORT=8080
DOC_GEN_PORT=5001

# Client URL (for CORS)
CLIENT_URL=http://localhost:3001

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Workspace Paths
WORKSPACE_PATH=./workspace
DOCUMENTS_PATH=./documents
LOGS_PATH=./logs